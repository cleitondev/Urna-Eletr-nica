@keyframes pisca 
    0%
        opacity 0.2
    5%
        opacity 1
    100%
        opacity 0.2

body
    margin 0
    display flex
    justify-content center
    align-items center
    height 100vh
    font-family Arial, Helvetica, sans-serif
.pageUrna
    .aviso--g
        font-size 60px
        font-weight bold
        text-align center
        margin auto
    .pisca
        animation pisca
        animation-duration: 1s
        animation-iteration-count: infinite
    .urna
        background-color #dbd5c9
        padding 30px
        display flex
        .tela
            width 500px
            height 320px
            background linear-gradient(to right, #E8E8E8, #C1C1C1)
            border 2px solid #555
            display flex
            flex-direction column
            .d-1
                flex 1
                display flex
                .d-1-left
                    flex 1
                    display flex
                    flex-direction column
                    padding-left 20px
                    .d-1-1
                        height 50px
                        display flex
                        align-items center
                    .d-1-2
                        height 50px
                        display flex
                        align-items center
                        justify-content center
                    .d-1-3
                        height 50px
                        .numero
                            display inline-block
                            width 30px
                            height 40px
                            border 1px solid #000
                            text-align center
                            line-height 40px
                            font-size 25px
                            margin 2px
                    .d-1-4
                        flex 1
                        line-height 25px
                        .aviso--grande
                            font-size 30px
                            font-weight bold
                            text-align center
                            margin-top 15px
                .d-1-right
                    width 110px
                    padding 10px
                    display flex
                    flex-direction: column
                    align-items flex-end 
                    .d-1-image
                        border 1px solid #000000
                        background-color #fff
                        text-align center
                        font-size 14px
                        margin-bottom 3px
                        img
                            width 100%  
                    .small
                        width 80%
                        font-size 12px
            .d-2
                height 75px
                font-size 15px
                border-top 2px solid #000  
                padding-left 10px
        .teclado
            background-color #403A3A
            margin-left 30px
            .teclado--linha
                display flex
                justify-content center
                align-items flex-end
                .teclado--botao
                    width 70px
                    height 40px
                    background-color #000000
                    color #fff
                    font-size 25px 
                    display flex
                    justify-content center
                    align-items center
                    margin 10px
                    box-shadow 3px 3px 3px 0px #555
                .btn-branco
                    background-color #fff
                    color #000
                    font-size 12px
                .btn-corrige
                    background-color #f09046
                    color #000
                    font-size 12px
                .btn-confirma
                    background-color #48C079
                    color #000
                    font-size 15px
                    width 90px
                    height 50px